---
// Contenido en español e inglés
const content = {
  es: {
    title: "Conectamos tu negocio con más clientes",
    subtitle: "Soluciones digitales 360º",
    cta: "Hablemos hoy"
  },
  en: {
    title: "We connect your business with more customers",
    subtitle: "Creative marketing for clinics, clubs & gastronomy",
    cta: "Let's talk today"
  }
};

const currentLang = 'es';
const currentContent = content[currentLang as keyof typeof content];
---

<section id="inicio" class="min-h-[50vh] flex items-center justify-center bg-gradient-to-br from-sumat-beige to-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center animate-fade-in">
      <h1 class="text-4xl md:text-6xl font-oddlini text-sumat-navy mb-6 leading-tight">
        {currentContent.title}
        <p class="text-xl md:text-2xl text-sumat-teal mb-8 leading-relaxed">
          {currentContent.subtitle}
        </p>
      </h1>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
                  <a href="https://wa.me/34652592174?text=Hola%20SUMAT,%20me%20interesa%20vuestros%20servicios%20de%20marketing" 
             target="_blank" 
             rel="noopener noreferrer"
             class="bg-sumat-navy hover:bg-sumat-teal text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 hover:scale-105 shadow-lg">
            <i class="fab fa-whatsapp mr-2"></i>
            {currentContent.cta}
          </a>
                  <a href="https://calendly.com/agenciasumat/30min" 
             target="_blank" 
             rel="noopener noreferrer"
             class="border-2 border-sumat-navy text-sumat-navy hover:bg-sumat-navy hover:text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300">
            <i class="far fa-calendar-alt mr-2"></i>
            Agenda reunión
          </a>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <a href="#servicios" class="text-sumat-navy hover:text-sumat-teal transition-colors duration-300">
        <i class="fas fa-chevron-down text-2xl"></i>
      </a>
    </div>
  </div>
</section>
