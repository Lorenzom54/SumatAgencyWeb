---
const clientes = [
  { name: "Sabole", logo: "SABOLE" },
  { name: "I AM Care", logo: "I AM CARE" },
  { name: "Rafa Soler Chef", logo: "RAFA SOLER" },
  { name: "Artesaca", logo: "ARTESACA" },
  { name: "Lipi", logo: "LIPI" },
  { name: "Abrego", logo: "ABREGO" },
  { name: "Audreys", logo: "AUDREYS" },
  { name: "Jevole Coffee", logo: "JEVOLE" },
  { name: "Madness Coffee", logo: "MADNESS" }
];
---

<section id="clientes" class="py-20 bg-sumat-beige">
  <div class="container mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-4xl md:text-5xl font-oddlini text-sumat-navy mb-6">
        Ya conf√≠an en nosotros
      </h2>
    </div>

    <!-- Grid de logos -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-8 max-w-6xl mx-auto">
      {clientes.map((cliente, index) => (
        <div class="animate-fade-in" style={`animation-delay: ${index * 0.1}s`}>
          <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2 h-24 flex items-center justify-center">
            <div class="text-center">
              <div class="text-lg font-semibold text-sumat-navy">
                {cliente.logo}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
